[Unit]
Description=Apex Network Go Application
After=network.target

[Service]
ExecStart=/home/ubuntu/apex/src/apex-app apex_network_api
WorkingDirectory=/home/ubuntu/apex
User=ubuntu
Group=ubuntu
Environment="PORT={{ port }}"
Environment="DB_URL={{ db_url }}"
Restart=always

[Install]
WantedBy=multi-user.target